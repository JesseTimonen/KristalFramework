RewriteEngine On
RewriteBase /


#========================#
# Force HTTPS Connection #
#========================#
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI}


#====================#
# Routing Controller #
#====================#
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)$ index.php [L]


#=================#
# Error Reporting #
#=================#
php_flag  display_errors    on
php_value error_reporting   2039


#====================#
# Protect File Types #
#====================#
<Files ~ "\.(htaccess|htpasswd|ini|php|sql|lock)$">
    Order Allow,Deny
    Deny from all
</Files>


#========================#
# Protect Specific Files #
#========================#
<FilesMatch "composer.json|README|LICENSE">
    Order Allow,Deny
    Deny from all
</FilesMatch>


#=============#
# Allow Files #
#=============#
<FilesMatch "index.php|robots.txt">
    Order Allow,Deny
    Allow from all
</FilesMatch>